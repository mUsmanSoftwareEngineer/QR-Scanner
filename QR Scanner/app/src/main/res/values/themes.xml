<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme_Splash" parent="Theme.AppCompat.Light.NoActionBar">


        <item name="android:windowBackground">@drawable/splash_background</item>

        <item name="colorPrimary">#181818</item>
        <item name="colorPrimaryDark">#181818</item>
        <item name="colorAccent">#181818</item>
        <item name="android:statusBarColor">#181818</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="paddingStart">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">@drawable/round_ad_attribution</item>
        <!--        <item name="android:width">15dp</item>-->
        <!--        <item name="android:height">15dp</item>-->
    </style>

    <!--Difference 21-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!--Difference-->

    <style name="DialogThemeNew">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
