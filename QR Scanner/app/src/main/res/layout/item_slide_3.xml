<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/crown"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="@string/pro_user"
                    android:textAllCaps="true"
                    android:textColor="@color/tt_black"
                    android:textSize="@dimen/_18sdp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_1"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:visibility="visible"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:gravity="center"
                        android:text="@string/premium"
                        android:textAllCaps="true"
                        android:textColor="@color/tt_black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:gravity="center"
                        android:text="@string/basic"
                        android:textAllCaps="true"
                        android:textColor="@color/tt_black"
                        android:textSize="16sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="0.4"
                        android:src="@drawable/logo_icon"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/roboto_regular"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/set_logo_in_center"
                        android:textColor="@color/tt_black"

                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:src="@drawable/check"
                        app:tint="@color/tt_black"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.9">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:src="@drawable/check"
                            app:tint="@color/tt_black"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="0.4"
                        android:src="@drawable/no_ads"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:gravity="start"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/no_ads"
                        android:textColor="@color/tt_black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:src="@drawable/check"
                        app:tint="@color/tt_black"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.9">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="37dp"
                            android:layout_marginEnd="37dp"
                            android:background="@color/tt_black" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="0.4"
                        android:src="@drawable/eye_01"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:gravity="start"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/change_eyes"
                        android:textColor="@color/tt_black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:src="@drawable/check"
                        app:tint="@color/tt_black"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.9">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="37dp"
                            android:layout_marginEnd="37dp"
                            android:background="@color/tt_black" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="0.4"
                        android:src="@drawable/dot_04"
                        app:tint="@color/tt_black"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:gravity="start"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/change_dots"
                        android:textColor="@color/tt_black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:src="@drawable/check"
                        app:tint="@color/tt_black"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.9">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="37dp"
                            android:layout_marginEnd="37dp"
                            android:background="@color/tt_black" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="0.4"
                        android:src="@drawable/gradient_05"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/roboto_regular"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/apply_gradients"
                        android:textColor="@color/tt_black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:src="@drawable/check"
                        app:tint="@color/tt_black"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.9">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="37dp"
                            android:layout_marginEnd="37dp"
                            android:background="@color/tt_black" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/remove_ads"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/mainLinear"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/generate_bg"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_regular"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/upgrade_to_pro"
                android:textAllCaps="true"
                android:textColor="@color/whiteLight"
                android:textColorLink="@color/whiteLight"
                android:textSize="20sp"
                android:visibility="visible" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>