<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:gravity="center"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="@string/qrCodEMaker"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/qrImg"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/qr_code"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/supportedQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qrImg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingStart="@dimen/_10sdp"
            android:gravity="center"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/supportedQR"
            android:textColor="@color/tt_black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/barImg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp"
            android:layout_below="@+id/supportedQR"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/bar_code_tutorial"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/barImg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/supportedBarCode"
            android:textColor="@color/tt_black"
            android:textSize="18sp" />

    </RelativeLayout>
</FrameLayout>